# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=loans_db
DB_USERNAME=loans_user
DB_PASSWORD=loans_password

# JWT Configuration
JWT_SECRET=change-this-secret-key-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=change-this-refresh-secret-key-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Mail Configuration
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_FROM=noreply@loans.local

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password
REDIS_TTL=3600
CACHE_ENABLED=true